<div class="card bg-light mb-3">
  <div class="card-body">
    <h4 class="card-title">{{name}}</h4>
    <h6 class="card-subtitle mb-2">Level: {{level}}</h6>
    <h6 class="card-subtitle mb-2">Current Exp: {{currentExp}} | Exp Needed: {{expNeeded}}</h6>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Attack: {{attack}}</li>
      <li class="list-group-item">Health: {{health}}</li>
    </ul>
  </div>
</div>
