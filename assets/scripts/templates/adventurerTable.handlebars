<div class="table-responsive" id="adventurersTableContainer">
  <table class="table table-hover" id="myAdventurers">
    <thead>
      <tr>
        <th>Name</th>
        <th>Level</th>
        <th>Current Exp</th>
        <th>Exp Needed</th>
        <th>Date Created</th>
      </tr>
    </thead>
    <tbody>
      {{#each adventurers as |adv| }}
      <tr>
        <td>{{adv.name}}</td>
        <td>{{adv.level.number}}</td>
        <td>{{adv.current_exp}}</td>
        <td>{{adv.level.exp_needed}}</td>
        <td>{{adv.date_created}}</td>
      <tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{> createNewAdventurerButton}}
