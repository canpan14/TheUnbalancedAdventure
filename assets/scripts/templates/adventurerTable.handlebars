<div class="alert alert-info" role="alert">Select an adventurer to begin!</div>
<div class="table-responsive" id="adventurersTableContainer">
  <table class="table table-hover text-center table-border table-striped" id="myAdventurers">
    <thead>
      <tr>
        <th>Name</th>
        <th>Level</th>
        <th>Current Exp</th>
        <th>Kills</th>
        <th>Date Created</th>
      </tr>
    </thead>
    <tbody>
      {{#each adventurers as |adv| }}
      <tr id="{{adv.id}}">
        <td>{{adv.name}}</td>
        <td>{{adv.level.number}}</td>
        <td>{{adv.current_exp}}</td>
        <td>{{adv.kills}}</td>
        <td>{{adv.date_created}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{> createNewAdventurerButton}}
